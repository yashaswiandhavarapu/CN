#include <stdio.h>
#include <string.h>
int main() {
int a[50], b[100];
int i, j = 0, n, count = 0;
printf("Enter frame length: ");
scanf("%d", &n);
printf("Enter input frame (0's & 1's only): ");
 for (i = 0; i < n; i++)
   scanf("%d", &a[i]);
for (i = 0; i < n; i++) {
        b[j] = a[i];
        if (a[i] == 1)
            count++;
        else
            count = 0;
if (count == 5) {
            j++;
            b[j] = 0;
            count = 0;
        }
        j++;
    }

    printf("After stuffing, the frame is: ");
    for (i = 0; i < j; i++)
        printf("%d", b[i]);

    printf("\n");
    return 0;
}
