#include <stdio.h>
#include <string.h>

int main() {
    char a[30], fs[60] = "";
    char sd, ed;
    char s[3], d[3], x[3], y[3], t[3];
    int i;

    printf("Enter characters to be stuffed: ");
    scanf("%s", a);

    printf("Enter a character that represents starting delimiter: ");
    scanf(" %c", &sd);

    printf("Enter a character that represents ending delimiter: ");
    scanf(" %c", &ed);

    s[0] = sd; s[1] = sd; s[2] = '\0';
    d[0] = ed; d[1] = ed; d[2] = '\0';
    x[0] = sd; x[1] = '\0';
    y[0] = ed; y[1] = '\0';

    strcat(fs, x);

    for (i = 0; i < strlen(a); i++) {
        t[0] = a[i];
        t[1] = '\0';
        if (a[i] == sd)
            strcat(fs, s);
        else if (a[i] == ed)
            strcat(fs, d);
        else
            strcat(fs, t);
    }

    strcat(fs, y);

    printf("\nAfter stuffing: %s\n", fs);
    return 0;
}
