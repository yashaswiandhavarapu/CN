#include <stdio.h>

#define INF 9999
#define MAX 20

int main() {
    int cost[MAX][MAX], visited[MAX];
    int n;

    printf("Enter number of hosts (nodes): ");
    scanf("%d", &n);

    printf("Enter the cost adjacency matrix (9999 for no link):\n");
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            scanf("%d", &cost[i][j]);

    // Initially no node is visited
    for (int i = 0; i < n; i++)
        visited[i] = 0;

    visited[0] = 1;  // Start from node 0

    int edges = 0, totalCost = 0;

    printf("\nBroadcast Tree (Minimum Spanning Tree):\n");
    printf("Edge\tCost\n");

    while (edges < n - 1) {
        int min = INF, a = -1, b = -1;

        for (int i = 0; i < n; i++) {
            if (visited[i]) {
                for (int j = 0; j < n; j++) {
                    if (!visited[j] && cost[i][j] < min) {
                        min = cost[i][j];
                        a = i;
                        b = j;
                    }
                }
            }
        }

        printf("%d -- %d\t%d\n", a, b, min);
        totalCost += min;
        visited[b] = 1;
        edges++;
    }

    printf("\nTotal cost of Broadcast Tree: %d\n", totalCost);
    return 0;
}
